@page
@model CreateModel
@{
    ViewData["Title"] = "Add Device";
}

<h1>Add Device</h1>

<hr/>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.IpAddress" class="control-label"></label>
                <input asp-for="Input.IpAddress" class="form-control" placeholder="192.168.1.100"/>
                <span asp-validation-for="Input.IpAddress" class="text-danger"></span>
                <small class="form-text text-muted">Enter the IP address of your HomeWizard device</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Name" class="control-label"></label>
                <input asp-for="Input.Name" class="form-control" placeholder="Living Room (optional)"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
                <small class="form-text text-muted">Leave blank to use the device's default name</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Device" class="btn btn-primary"/>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="alert alert-info">
            <h5>Before adding a device:</h5>
            <ul>
                <li>Ensure your HomeWizard device is connected to your network</li>
                <li>Find the device's IP address (check your router or the HomeWizard app)</li>
                <li>Make sure the device's local API is enabled</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        // Add client-side IP validation
        $(document).ready(function() {
            $.validator.addMethod("ipv4",
                function(value, element) {
                    return this.optional(element) || /^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$/.test(value);
                },
                "Please enter a valid IP address");
        });
    </script>
}